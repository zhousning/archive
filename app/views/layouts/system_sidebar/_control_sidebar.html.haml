- if current_user.has_role?(Setting.roles.role_fct)
  = render 'layouts/system_sidebar/fct_sidebar'
- elsif current_user.has_role?(Setting.roles.role_grp)
  = render 'layouts/system_sidebar/grp_sidebar'
- elsif current_user.has_role?(Setting.roles.super_admin)
  = render 'layouts/system_sidebar/admin_sidebar'
= link_to archives_path, :class => "list-group-item list-group-item-action border-0 text-left pl-4 py-2  #{(/archive|portf/ =~ request.path).nil? ? '' : 'text-danger'} " do
  = fa_icon "file-archive-o", text: Setting.archives.label, class: " ml-4 mr-2"
= link_to examines_path, :class => "list-group-item list-group-item-action border-0 text-left pl-4 py-2  #{(/examine/ =~ request.path).nil? ? '' : 'text-danger'}" do
  = fa_icon "file-text", text: Setting.examines.label, class: " ml-4 mr-2"
